                     <TableColumn fx:id="leaving_hour" prefWidth="118.0" text="Leaving Hour" />
                   <TableColumn fx:id="start_date" prefWidth="92.0" text="Start Date" />
                     <TableColumn fx:id="end_date" prefWidth="82.0" text="End Date" />
