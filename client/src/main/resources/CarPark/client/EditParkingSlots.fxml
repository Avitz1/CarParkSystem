<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"  xmlns:fx="http://javafx.com/fxml/1" fx:controller="CarPark.client.controllers.EditParkingSlotsController">
    <children>
        <TableView fx:id="plTable" layoutX="40.0" layoutY="153.0" prefHeight="216.0" prefWidth="510.0">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="163.0" text="parkingSlot id" />
                <TableColumn fx:id="currStaCol" minWidth="8.0" prefWidth="199.0" text="current status" />
                <TableColumn fx:id="editStaCol" prefWidth="147.0" text="edit status" />
            </columns>
        </TableView>
        <Label layoutX="40.0" layoutY="116.0" prefHeight="35.0" prefWidth="266.0" text="EDIT PARKINGSLOTS" textFill="#42d7ee">
            <font>
                <Font size="20.0" />
            </font>
            <cursor>
                <Cursor fx:constant="CROSSHAIR" />
            </cursor>
        </Label>
        <Label layoutX="40.0" layoutY="14.0" prefHeight="41.0" prefWidth="286.0" text="CHOOSE PARKINGLOT TO EDIT..." textFill="#2f839a">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <ComboBox fx:id="plPick" layoutX="408.0" layoutY="22.0" prefHeight="25.0" prefWidth="142.0" promptText="Select Parkinglot" />
        <Button fx:id="displayB" layoutX="378.0" layoutY="75.0" mnemonicParsing="false" onAction="#displayParkingLot" prefHeight="25.0" prefWidth="171.0" text="display parkingLot on table" />
    </children>
</AnchorPane>
